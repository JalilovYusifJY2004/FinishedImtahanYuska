@using FinalExamYusif.Models;
@model List<Setting> 
@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Table</h4>
     
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                             No
                            </th>
                            <th>
                         Key
                            </th>
                            <th>
                           Value
                            </th>
                        
                            <th>
                             Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (Setting setting in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                   @count
                                </td>
                                <td>
                                @setting.Key
                                </td>
                               @setting.Value
                                <td>
                                  <a asp-action="Update" asp-controller="setting" asp-route-id="@setting.Id" class="btn btn-success">Update</a>
                           
                                </td>
                            </tr>
                        }
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
